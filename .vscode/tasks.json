{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "self-run",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-Wall",
                "-g",
                "-D SELF=1",
                "${workspaceFolder}/calc/calc.c",
                "-o",
                "${workspaceFolder}/calc/calc.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ],
    "version": "2.0.0"
}